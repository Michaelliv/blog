---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE } from '../consts';
---

<html lang="en">
	<head>
		<BaseHead title={`404 | ${SITE_TITLE}`} description="Page not found" />
	</head>
	<body>
		<Header />
		<main>
			<h1>404</h1>
			<p>Page not found. The page you're looking for doesn't exist or has been moved.</p>
			<p><a href="/">Back to home</a> or <a href="/blog/">browse all posts</a>.</p>
		</main>
		<Footer />
	</body>
</html>

<style>
	main {
		text-align: center;
		padding: 4rem 1rem;
	}
	h1 {
		font-size: 4rem;
		margin: 0 0 1rem 0;
		color: var(--text-light);
	}
	p {
		color: var(--text-light);
	}
	a {
		color: var(--link);
	}
</style>
