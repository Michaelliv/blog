---
import { SITE_TITLE } from '../consts';
---

<header>
	<nav>
		<a href="/" class="site-title">{SITE_TITLE}</a>
		<span class="nav-links">
			<a href="/blog">blog</a>
			<a href="/about">about</a>
		</span>
	</nav>
</header>

<style>
	header {
		border-bottom: 1px solid var(--border);
		margin-bottom: 2rem;
	}
	nav {
		max-width: 650px;
		margin: 0 auto;
		padding: 1rem;
		display: flex;
		justify-content: space-between;
		align-items: center;
	}
	.site-title {
		font-weight: 600;
		text-decoration: none;
	}
	.nav-links a {
		margin-left: 1.5rem;
	}
</style>
