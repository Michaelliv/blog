---
interface Props {
  /** URL to display in address bar */
  url?: string;
  /** Tab title */
  title?: string;
}

const { url = "https://example.com", title = "New Tab" } = Astro.props;
---

<div class="browser">
  <div class="browser-chrome">
    <div class="tab-bar">
      <div class="tab active">
        <span class="tab-title">{title}</span>
        <span class="tab-close">√ó</span>
      </div>
      <div class="new-tab">+</div>
    </div>
    <div class="toolbar">
      <div class="nav-buttons">
        <span class="nav-btn">‚Üê</span>
        <span class="nav-btn">‚Üí</span>
        <span class="nav-btn">‚Üª</span>
      </div>
      <div class="address-bar">
        <span class="lock">üîí</span>
        <span class="url">{url}</span>
      </div>
      <div class="toolbar-actions">
        <span class="action">‚ãÆ</span>
      </div>
    </div>
  </div>
  <div class="browser-content">
    <slot />
  </div>
</div>

<style>
  .browser {
    border-radius: 8px;
    overflow: hidden;
    margin: 1.5rem 0;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
    max-width: 100%;
  }

  .browser-chrome {
    background: #202124;
  }

  .tab-bar {
    display: flex;
    align-items: flex-end;
    padding: 8px 8px 0 8px;
    gap: 2px;
  }

  .tab {
    background: #323639;
    border-radius: 8px 8px 0 0;
    padding: 8px 16px;
    display: flex;
    align-items: center;
    gap: 8px;
    min-width: 120px;
    max-width: 200px;
  }

  .tab.active {
    background: #35363a;
  }

  .tab-title {
    color: #e8eaed;
    font-size: 12px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    flex: 1;
  }

  .tab-close {
    color: #9aa0a6;
    font-size: 14px;
    cursor: pointer;
  }

  .new-tab {
    color: #9aa0a6;
    padding: 8px 12px;
    font-size: 14px;
    cursor: pointer;
  }

  .toolbar {
    background: #35363a;
    padding: 6px 8px;
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .nav-buttons {
    display: flex;
    gap: 4px;
  }

  .nav-btn {
    color: #9aa0a6;
    padding: 4px 8px;
    font-size: 14px;
    cursor: pointer;
  }

  .address-bar {
    flex: 1;
    background: #202124;
    border-radius: 16px;
    padding: 6px 12px;
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .lock {
    font-size: 12px;
  }

  .url {
    color: #e8eaed;
    font-size: 13px;
  }

  .toolbar-actions .action {
    color: #9aa0a6;
    padding: 4px 8px;
    font-size: 16px;
    cursor: pointer;
  }

  .browser-content {
    background: #2f2f2d;
    min-height: 200px;
  }
</style>
