---
import Analytics from '@vercel/analytics/astro';
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';

type Props = CollectionEntry<'blog'>['data'] & {
	slug: string;
	prevPost?: CollectionEntry<'blog'> | null;
	nextPost?: CollectionEntry<'blog'> | null;
	relatedPosts?: CollectionEntry<'blog'>[];
};

const { title, description, pubDate, updatedDate, slug, prevPost, nextPost, relatedPosts = [] } = Astro.props;
const ogImage = `/og/${slug}.png`;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} pubDate={pubDate} updatedDate={updatedDate} image={ogImage} />
	</head>
	<body>
		<Header />
		<div class="layout">
			<main>
				<article>
					<header class="post-header">
						<h1>{title}</h1>
						<p class="date">
							<FormattedDate date={pubDate} />
							{updatedDate && (
								<span class="updated"> (updated <FormattedDate date={updatedDate} />)</span>
							)}
						</p>
					</header>
					<div class="content">
						<slot />
					</div>
				</article>
				{relatedPosts.length > 0 && (
					<div class="related mobile-only">
						<span class="related-label">Related</span>
						{relatedPosts.map((post) => (
							<a href={`/blog/${post.id}/`} class="related-item">
								<span class="related-title">{post.data.title}</span>
							</a>
						))}
					</div>
				)}
				{(prevPost || nextPost) && (
					<nav class="post-nav">
						{prevPost && (
							<a href={`/blog/${prevPost.id}/`} class="post-nav-link prev">
								<span class="post-nav-label">Previous</span>
								<span class="post-nav-title">{prevPost.data.title}</span>
							</a>
						)}
						{nextPost && (
							<a href={`/blog/${nextPost.id}/`} class="post-nav-link next">
								<span class="post-nav-label">Next</span>
								<span class="post-nav-title">{nextPost.data.title}</span>
							</a>
						)}
					</nav>
				)}
			</main>
			<aside>
				{relatedPosts.length > 0 && (
					<div class="related desktop-only">
						<span class="related-label">Related</span>
						{relatedPosts.map((post) => (
							<a href={`/blog/${post.id}/`} class="related-item">
								<span class="related-title">{post.data.title}</span>
								{post.data.tags && (
									<span class="related-tags">
										{post.data.tags.slice(0, 2).join(' Â· ')}
									</span>
								)}
							</a>
						))}
					</div>
				)}
			</aside>
		</div>
		<Footer />
		<Analytics />
	</body>
</html>

<style>
	.layout {
		display: grid;
		grid-template-columns: 4fr 1fr;
		gap: 2rem;
		max-width: 850px;
		margin: 0 auto;
		padding: 2rem 1rem;
	}
	main {
		max-width: none;
		margin: 0;
		padding: 0;
		/* Prevent content from overflowing grid */
		min-width: 0;
	}
	aside {
		font-size: 0.85rem;
		padding-top: 3rem;
	}
	.related {
		margin-top: 0;
	}
	.related-label {
		display: block;
		font-size: 0.7rem;
		color: var(--text-light);
		text-transform: uppercase;
		letter-spacing: 0.05em;
		margin-bottom: 0.75rem;
	}
	.related-item {
		display: block;
		padding: 0.5rem 0;
		border-bottom: 1px solid var(--border);
		text-decoration: none;
	}
	.related-item:first-of-type {
		border-top: 1px solid var(--border);
	}
	.related-item:hover .related-title {
		color: var(--link);
	}
	.related-title {
		display: block;
		color: var(--text);
		line-height: 1.3;
	}
	.related-tags {
		display: block;
		font-size: 0.7rem;
		color: var(--text-light);
		margin-top: 0.2rem;
	}
	.post-nav {
		display: flex;
		justify-content: space-between;
		gap: 1rem;
		margin-top: 3rem;
		padding-top: 1.5rem;
		border-top: 1px solid var(--border);
		font-size: 0.85rem;
	}
	.post-nav-link {
		text-decoration: none;
	}
	.post-nav-link:hover .post-nav-title {
		text-decoration: underline;
	}
	.post-nav-link.prev {
		text-align: left;
	}
	.post-nav-link.next {
		text-align: right;
	}
	.post-nav-label {
		font-size: 0.7rem;
		color: var(--text-light);
		text-transform: uppercase;
		letter-spacing: 0.05em;
	}
	.post-nav-title {
		color: var(--link);
	}
	.post-header {
		margin-bottom: 2rem;
	}
	.post-header h1 {
		margin-bottom: 0.5rem;
		margin-top: 0;
	}
	.date {
		color: var(--text-light);
		font-size: 0.875rem;
		margin: 0;
	}
	.updated {
		font-style: italic;
	}

	/* Content styling - ensure components don't overflow */
	.content {
		overflow-wrap: break-word;
		word-wrap: break-word;
	}

	.content :global(pre) {
		max-width: 100%;
	}

	.mobile-only {
		display: none;
	}
	.desktop-only {
		display: block;
	}

	@media (max-width: 768px) {
		.layout {
			grid-template-columns: 1fr;
			padding: 1.5rem 1rem;
		}
		aside {
			display: none;
		}
		.mobile-only {
			display: block;
			margin-top: 2rem;
			padding-top: 1.5rem;
			border-top: 1px solid var(--border);
		}
		.mobile-only .related-item:first-of-type {
			border-top: none;
		}
		.post-nav {
			margin-top: 1.5rem;
		}
	}

	@media (max-width: 480px) {
		.post-header {
			margin-bottom: 1.5rem;
		}
		.post-header h1 {
			font-size: 1.25rem;
		}
		.post-nav {
			flex-direction: column;
			gap: 0;
		}
		.post-nav-link {
			display: block;
			padding: 0.5rem 0;
			border-bottom: 1px solid var(--border);
		}
		.post-nav-link:first-child {
			border-top: 1px solid var(--border);
		}
		.post-nav-link.prev,
		.post-nav-link.next {
			text-align: left;
		}
	}
</style>
